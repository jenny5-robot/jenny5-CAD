module linear_bearing(internal_radius, external_radius, height)
{
	union(){
		color ("Gainsboro") cylinder_empty(height, external_radius, external_radius - 1, 70);
		color ("black") cylinder_empty(height, external_radius - 1, internal_radius, 70);
	}
}
////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
module lm12uu()
{
	linear_bearing(smooth_rod_12_radius, lm12uu_external_radius, lm12uu_height);
}
